<web-app>
	<servlet>
		<servlet-name>customer</servlet-name>
		<servlet-class>com.newgen.controller.GetCustomerServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>customer</servlet-name>
		<url-pattern>/customer
		</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>customer2</servlet-name>
		<servlet-class>com.newgen.controller.CreateCustomerServlet
		</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>customer2</servlet-name>
		<url-pattern>/create
		</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>home</servlet-name>
		<servlet-class>com.newgen.controller.HomeController
		</servlet-class>
		<load-on-startup>3</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>home</servlet-name>
		<url-pattern>/home
		</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>getallcustomer</servlet-name>
		<servlet-class>com.newgen.controller.GetAllCustomerController
		</servlet-class>
		<load-on-startup>4</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>getallcustomer</servlet-name>
		<url-pattern>/all-customer
		</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

</web-app>